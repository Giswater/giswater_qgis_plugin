[flake8]
# Basic formatting
select = E2,E3,E4,E7,E9,N8,D1,D2,D3,D4,C9,F4,F541,F8,F9
# Exclude directories
exclude =
    __pycache__,
    .git,
    .pytest_cache,
    .idea,
    i18n,
    icons,
    packages,
    dbmodel,
    test,
    i18n_manager.py,
    schema_i18n_update.py,
    i18n_generator.py,
    markdown_generator.py
# Line length (QGIS plugins often need longer lines)
max-line-length = 120
# Maximum complexity
max-complexity = 40
# Output format
count = True
show-source = True
statistics = True
